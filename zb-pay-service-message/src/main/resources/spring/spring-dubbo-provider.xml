	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="zb-pay-service-message" />

	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}" />

	<!-- 用dubbo协议在20900端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20888" />
	
	<!-- 当ProtocolConfig和ServiceConfig某属性没有配置时,采用此缺省值 -->
	<dubbo:provider timeout="30000" threadpool="fixed" threads="500" accepts="1000" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service retries="0" interface="pers.zb.pay.service.message.api.RpTransactionMessageService" ref="rpTransactionMessageService" />

</beans>  